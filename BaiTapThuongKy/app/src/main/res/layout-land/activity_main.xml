<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

   <FrameLayout
       android:layout_weight="1"
       android:layout_width="0dp"
       android:layout_height="match_parent">
       <fragment
           android:id="@+id/fragmentButton"
           tools:layout="@layout/layout_fragmentbutton"
           android:name="com.example.student.myapplication.FragmentButton"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

       </fragment>
   </FrameLayout>
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fragmentInfo"
            tools:layout="@layout/layout_fragment_info"
            android:name="com.example.student.myapplication.FragmentInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </fragment>

    </FrameLayout>
</LinearLayout>